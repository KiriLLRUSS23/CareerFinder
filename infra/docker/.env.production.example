# Application
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
API_PREFIX=/api
FALLBACK_MODE=pure-gost

# Database
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=careerfinder
DB_PASSWORD=secure-production-password-change-me
DB_DATABASE=careerfinder_v7_production
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_SSL=true
DB_MAX_CONNECTIONS=50
DB_IDLE_TIMEOUT=30000

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=86400

# CORS
CORS_ORIGIN=https://careerfinder.ru,https://www.careerfinder.ru,https://careerfinder.test
CORS_CREDENTIALS=true

# JWT
JWT_SECRET=production-jwt-secret-change-me-secure-random-string
JWT_EXPIRES_IN=3600
JWT_REFRESH_SECRET=production-jwt-refresh-secret-change-me-secure-random-string
JWT_REFRESH_EXPIRES_IN=604800

# Security
CRYPTO_FALLBACK=pure-gost
PQC_APPROVED=false
FALLBACK_THRESHOLD=0.85

# Government APIs
TRUDVSEM_API_KEY=production-trudvsem-api-key
TRUDVSEM_API_SECRET=production-trudvsem-api-secret
ESIA_CERT_PATH=/certs/esia-production.p12
ESIA_CERT_PASSWORD=production-esia-cert-password

# Carbon
CARBON_BUDGET_KG_MONTH=100
CARBON_OFFSET_PROVIDER=veb-rf-esg
CARBON_OFFSET_API_KEY=production-veb-rf-esg-api-key

# Sentry
SENTRY_DSN=https://production-sentry-dsn@o123456.ingest.sentry.io/123456
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=v7.0.0

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/production.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=10

# PGAdmin
PGADMIN_EMAIL=admin@careerfinder.ru
PGADMIN_PASSWORD=secure-pgadmin-password-change-me

# Regional Settings
DEFAULT_REGION=volga
DEFAULT_LANGUAGE=russian
SUPPORTED_LANGUAGES=russian,tatar,bashkir,chuvash,mordovian
SUPPORTED_REGIONS=tatarstan,samara,bashkortostan,ulyanovsk,penza,chuvashia,mordovia
