{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/frontend/src/core/*"],
      "@shared/*": ["src/frontend/src/shared/*"],
      "@apps/*": ["src/frontend/src/apps/*"]
    },
    "resolveJsonModule": true,
    "noEmit": true
  },
  "exclude": ["node_modules", "dist", "build"]
}
