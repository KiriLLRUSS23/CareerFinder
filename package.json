{
  "name": "careerfinder-v7.0",
  "version": "7.0.0",
  "description": "Post-quantum enterprise HR platform for Russia with Volga region focus",
  "private": true,
  "workspaces": [
    "src/backend",
    "src/frontend",
    "src/mobile"
  ],
  "scripts": {
    "setup": "npm install && npm run setup:backend && npm run setup:frontend && npm run setup:mobile",
    "setup:backend": "cd src/backend && npm install",
    "setup:frontend": "cd src/frontend && npm install",
    "setup:mobile": "cd src/mobile && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:mobile\"",
    "dev:backend": "cd src/backend && npm run dev",
    "dev:frontend": "cd src/frontend && npm run dev",
    "dev:mobile": "cd src/mobile && npm run start",
    "build": "npm run build:backend && npm run build:frontend && npm run build:mobile",
    "build:backend": "cd src/backend && npm run build",
    "build:frontend": "cd src/frontend && npm run build",
    "build:mobile": "cd src/mobile && npm run build",
    "test": "npm run test:backend && npm run test:frontend && npm run test:mobile",
    "test:backend": "cd src/backend && npm run test",
    "test:frontend": "cd src/frontend && npm run test",
    "test:mobile": "cd src/mobile && npm run test",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}
